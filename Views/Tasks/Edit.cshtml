@model LearnMvc.Models.TaskItem

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container mt-4">
    <h1>Edit Task</h1>
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Task Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsComplete" />
                    <label class="form-check-label" asp-for="IsComplete">
                        Mark as complete
                    </label>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
    
    <div class="mt-4">
        <small class="text-muted">Created: @Model.CreatedDate.ToString("f")</small>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

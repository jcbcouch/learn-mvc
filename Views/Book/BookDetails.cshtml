@model LearnMvc.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>@Model.Title</h2>
            <div class="float-end">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this book? This action cannot be undone.');">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="col-md-4 mb-3">
                        <div class="book-cover-container">
                            <img src="~/@Model.ImagePath" alt="@Model.Title cover" class="img-fluid rounded shadow" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ISBN)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN)</dd>

                            <dt class="col-sm-4">Author</dt>
                            <dd class="col-sm-8">
                                @(Model.Author != null ? $"{Model.Author.FirstName} {Model.Author.LastName}" : "Unknown")
                            </dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PublishedDate)</dt>
                            <dd class="col-sm-8">@Model.PublishedDate.ToString("MMMM d, yyyy")</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PageCount)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PageCount) pages</dd>

                            @if (Model.BookCategories != null && Model.BookCategories.Any())
                            {
                                <dt class="col-sm-4">Categories</dt>
                                <dd class="col-sm-8">
                                    @string.Join(", ", Model.BookCategories.Select(bc => bc.Category?.Name).Where(name => name != null))
                                </dd>
                            }
                        </dl>
                    </div>
                }
                else
                {
                    <div class="col-12">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ISBN)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN)</dd>

                            <dt class="col-sm-4">Author</dt>
                            <dd class="col-sm-8">
                                @(Model.Author != null ? $"{Model.Author.FirstName} {Model.Author.LastName}" : "Unknown")
                            </dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PublishedDate)</dt>
                            <dd class="col-sm-8">@Model.PublishedDate.ToString("MMMM d, yyyy")</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PageCount)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PageCount) pages</dd>

                            @if (Model.BookCategories != null && Model.BookCategories.Any())
                            {
                                <dt class="col-sm-4">Categories</dt>
                                <dd class="col-sm-8">
                                    @string.Join(", ", Model.BookCategories.Select(bc => bc.Category?.Name).Where(name => name != null))
                                </dd>
                            }
                        </dl>
                    </div>
                }
            </div>

            @if (Model.Author != null && !string.IsNullOrEmpty(Model.Author.Bio))
            {
                <div class="mt-4">
                    <h4>About the Author</h4>
                    <p>@Model.Author.Bio</p>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>

<style>
    .book-cover-container {
        max-width: 300px;
        margin: 0 auto;
    }
    
    .book-cover-container img {
        max-height: 400px;
        width: 100%;
        object-fit: contain;
    }
</style>

@model IEnumerable<LearnMvc.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>
</p>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>Author</th>
                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                <th>@Html.DisplayNameFor(model => model.PublishedDate)</th>
                <th>@Html.DisplayNameFor(model => model.PageCount)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="BookDetails" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>@(item.Author != null ? $"{item.Author.FirstName} {item.Author.LastName}" : "Unknown")</td>
                    <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                    <td>@item.PublishedDate.ToString("yyyy-MM-dd")</td>
                    <td>@Html.DisplayFor(modelItem => item.PageCount)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="BookDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="ManageCategories" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Manage Categories</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No books found in the database. <a asp-action="Create" class="alert-link">Create a new book</a> to get started.
    </div>
}
